# Source Prezto.
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi

# Customize to your needs...

if (( $+commands[exa] )); then
  alias ls="exa -la"
  alias la="ls"
fi

function ff(){
  sudo find $@ 2>&1 | grep -v "Permission denied"
}

function jcurl(){
  curl -s "$@" | json_pp | pygmentize -l json
}
